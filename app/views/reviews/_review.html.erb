<div class="review-card">
  <ul class="users follow">
    <li>
      <%= gravatar_for review.user, size: 30 %>
      <%= link_to review.user.name, review.user %>
    </li>
    <li>
      <span class="time-ago-in-words pull-right">
        <%= time_ago_in_words(review.created_at) %>
        <%= t("views.activities.ago") %>
      </span>
      <div>
        <%= t "views.reviews.rating" %>
        <span class="review-rating" ><%= review.rate %></span>
      </div>
      <div>
        <%= t "views.reviews.content" %>
        <%= review.content %>
      </div>
    </li>
  </ul>
  <div>
    <% if current_user.current_user? review.user %>
      <%= link_to t("admin.book.edit_button"),
        edit_book_review_path(review.book, review), class: "btn btn-success" %>
      <%= link_to t("admin.book.delete_button"),
        book_review_path(review.book, review),
        method: :delete, data: {confirm: t("admin.book.delete_confirm")},
        class: "btn btn-success" %>
    <% end %>
  </div>
  <div class="comments">
    <ul class="users follow">
      <li>
        <%= gravatar_for current_user, size: 30 %>
        <%= link_to current_user.name, current_user %>
      </li>
      <li>
        <%= form_for [@book, review, @support.comment], remote: true do |f| %>
          <div class="col-sm-10 user-add-comment">
            <%= f.text_area :content, class: "comment-area form-control" %>
          </div>
          <div class="col-sm-2">
            <%= f.submit t("review.submit"), class: "btn btn-warning" %>
          </div>
        <% end %>
      </li>
      <div id="view-comments-<%= review.id%>">
        <%= render review.comments.order_by_time %>
      </div>
    </ul>
  </div>
</div>
