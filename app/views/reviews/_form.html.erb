<%= form_for [@book, @review] do |f| %>
  <%= render "shared/error_messages", object: f.object %>

  <%= f.label :rate %>
  <%= f.select :rate , options_for_select(Settings.array_numbers), class: "form-control" %>

  <%= f.label :content %>
  <%= f.text_field :content, class: "form-control" %>

  <%= f.submit t("review.submit"), class: "btn btn-primary" %>
  <%= link_to t("layouts.cancle"), book_path(@book) %>
<% end %>
