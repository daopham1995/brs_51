<% provide :title, t("users.heading") %>
<% provide :button_text, t("requests.new.create_requests") %>
<h1><%= t "requests.new.heading" %></h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for @request do |f| %>
        <%= render "shared/error_messages", object: @request %>    

        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>

        <%= f.label :author_name %>
        <%= f.text_field :author_name, class: "form-control" %>

        <%= f.label :publish_date %>
        <%= f.date_field :publish_date, class: "form-control" %>

        <%= f.label :content %>
        <%= f.text_area :content, class: "form-control" %>

        <%= f.submit yield(:button_text), class: "btn btn-primary" %>
      <% end %>
  </div>
</div>
