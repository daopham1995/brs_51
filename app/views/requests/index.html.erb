<h1><%= t "requests.index.heading" %></h1>

<table class="table table-hover">
  <tr>
    <th><%= t "requests.id" %></th>
    <th><%= t "requests.title" %></th>
    <th><%= t "requests.author" %></th>
    <th><%= t "requests.content" %></th>
    <th></th>
  </tr>
  <% @requests.each do |request| %>
    <tr>
      <td> <%= request.id %> </td>
      <td> <%= request.title %> </td>
      <td> <%= request.author_name %> </td>
      <td> <%= request.content %> </td>
      <td>
        <span>
          <%= link_to t("requests.index.delete"), request_path(request),
            method: :delete, data: {confirm: t("requests.index.delete_confirm")},
            class:"btn btn-info" %>
        </span>
      </td>
    </tr>
  <% end %>
</table>
<div>
  <%= link_to t("requests.index.newrequest"), new_request_path,
    class: "btn btn-info" %>
</div>
<%= will_paginate @requests %>
