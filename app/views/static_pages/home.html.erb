<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
    </aside>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.heading" %></h1>
    <p><%= t "static_pages.home.caption" %></p>
    <%= link_to t("layouts.sign_up"), signup_path , class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
